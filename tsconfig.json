{
    "compilerOptions": {
        "target": "es6",
        "outDir": "lib",
        "rootDir": "src",
        "project": "src",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "newLine": "LF",
        "removeComments": false,
        "watch": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es6", "dom"]
    },
    "exclude": [
        "node_modules",
        "test",
        "lib",
        ".build"
    ],
    "files": [
        "src/main.ts",
        ]
}